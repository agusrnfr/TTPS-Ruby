<%= form_with(model: office) do |form| %>
  <% if office.errors.any? %>
    <div style="color: red">
      <h2>
        <%= t("offices.form.errors_title", count: office.errors.count) %>
      </h2>

      <ul>
        <% office.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t("offices.form.name") %>
    <%= form.text_field :name, required: true, maxlength: 255 %>
  </div>

  <div>
    <%= form.label :phone_number, t("offices.form.phone_number") %>
    <%= form.text_field :phone_number, required: true, maxlength: 30 %>
  </div>

  <div>
    <%= form.label :address, t("offices.form.address") %>
    <%= form.text_area :address, rows: 3 %>
  </div>

  <div>
    <%= form.label :available, t("offices.form.available") %>
    <%= form.check_box :available %>
  </div>

  <div>
    <%= form.submit t("offices.form.submit") %>
  </div>
<% end %>
