<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2>
        <%= t("employees.form.errors_title", count: employee.errors.count) %>
      </h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t("employees.form.name") %>
    <%= form.text_field :name, required: true, maxlength: 150 %>
  </div>

  <div>
    <%= form.label :e_number, t("employees.form.e_number") %>
    <%= form.number_field :e_number, required: true %>
  </div>

  <div>
    <%= form.label :office_id, t("employees.form.office") %>
    <%= form.collection_select :office_id, Office.all, :id, :name,
                               { prompt: t("employees.form.office_prompt") },
                               { class: "form-select" } %>
  </div>

  <div>
    <%= form.submit t("employees.form.submit") %>
  </div>
<% end %>
